---

import { Icon } from 'astro-icon/components';
---

<!-- This is the Navigation of the website, titles and Logo can be changed. -->
<!--  This is a basic example of the Navigation Bar... Feel free to change or add anything to make it your way!-->

<nav class=" shadow mb-10 mt-[20px] ml-[35px] w-full md:ml-0">
    <div x-data="{isOpen: false}" class="max-w-3xl mx-auto py-3 px-6 md:px-0 md:flex md:justify-between md:items-center">
        <div class="md:flex md:justify-between md:items-center">
            <div class="flex items-center">
                <img src="https://i.imgur.com/c5HGrwR.png" class="h-[50px] w-[50px] shadow rounded-full" alt="" />
                <a href="#" class="text-white text-[28px] hover:text-[#F2AFEF] ml-0 md:ml-[-200px] font-bold">Imagine AI</a>
            </div>
            <!-- mobile menu button -->
            <div class="flex md:hidden">
                <button
                type="button"
                class="text-gray-500 hover:text-gray-600 focus:outline-none mt-[-50px] lg:mt-0 ml-[350px] md:ml-0 focus:text-gray-600"
                aria-label="toggle menu"
                @click="isOpen = !isOpen"
                >
                <div class="h-[50px] w-[50px] flex items-center justify-center ml-[10px]">
                    <Icon name="pepicons-print:menu" class="text-white text-[30px]" />
                </div>
                </button>
            </div>

            <!-- menu if mobile is set to hidden -->
            <div :class="isOpen ? 'show' : 'hidden'" class="md:flex items-center mt-4">
                <div class="flex flex-col mt-[10px] md:mt-[-15px] md:flex-row ml-6 md:ml-6">
                    <a class="my-3 text-[16px] text-white font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">Home</a>
                    <a class="my-3 text-[16px] text-white font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">Shop</a>
                    <a class="my-3 text-[16px] text-white font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">About</a>
                    <a class="my-3 text-[16px] text-white font-medium hover:text-indigo-500 md:mx-4 md:my-0" href="#">Contact</a>
                </div>

                <div class="invisible md:visible w-[40%] md:w-full flex items-center justify-center mt-[10px] md:mt-[-15px] md:flex-row ml-[20px] md:ml-[500px]">
                    <button class=" w-[120px] h-[35px] border-2 border-[#7360DF] hover:border-[#F2AFEF] rounded-full text-white text-[15px]">Try Free</button>
               
                    
                    <button class="w-[200px] md:w-[120px] h-[35px] bg-[#7360DF] hover:bg-[#F2AFEF] rounded-md md:rounded-full text-white text-[15px] shadow-md shadow-[#7360DF] hover:shadow-[#F2AFEF] ml-[-90px] md:ml-[15px]">Sign in</button>
                </div>

            </div>
        </div>
    </div>
</nav>